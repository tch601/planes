FROM openjdk:18-jdk-alpine3.14

WORKDIR ./flights/server

ARG DB_USERNAME
ENV DB_USERNAME $DB_USERNAME
ARG DB_URL
ENV DB_URL $DB_URL
ARG DB_NAME
ENV DB_NAME $DB_NAME
ARG DB_PASSWORD
ENV DB_PASSWORD $DB_PASSWORD
ARG SERVER_PORT
ENV SERVER_PORT $SERVER_PORT

COPY ./target/BsmchFlights-1.0-SNAPSHOT.jar flights.jar

EXPOSE ${SERVER_PORT}

ENTRYPOINT ["java","-jar","flights.jar"]

